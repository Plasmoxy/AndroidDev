<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- note: looks like you can only set style when inflating a view so i have to set styling manually after inflation and this is worth shit -->
    
    <style name="CardThemeLight">
        <item name="android:textColor">@color/colorDark</item>
        <item name="tint">@color/colorDark</item>
    </style>
    
    <style name="CardThemeDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="tint">@android:color/white</item>
    </style>
    
    <style name="CardBlue" parent="CardView">
        <item name="cardBackgroundColor">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>